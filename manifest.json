{
    "manifest_version": 2,
    "name": "IRIS",
    "description": "The personalized screen reader",
    "version": "1.0",
    "browser_action": {
        "default_icon": "iris_eye.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["jquery-3.3.1.js", "content.js"]
        }
    ],
    "background": {
        "scripts": [
            "jquery-3.3.1.js",
            "background.js"
        ]
    },
    "permissions": [
        "storage",
        "tabs"
    ],
    "web_accessible_resources": ["*.wav"]
}